<% div_for board, :class => "tile" do %>
		<dt><%= link_to h(board.name), board %></dt>
		<dd><%= h board.description %></dd>
		<% 
		if @current_user
			info = []
			unread_topics = board.unread_topics_for @current_user 
			info << "#{unread_topics} onderwerp#{"en" unless unread_topics == 1}" unless unread_topics.zero?
			unread_reactions = board.unread_reactions_for @current_user 
			info << "#{unread_reactions} reactie#{"s" unless unread_reactions == 1}" unless unread_reactions.zero?
			%><%="<dd>ongelezen: #{info.join(", ")}</dd>" unless info.size.zero? %><%	
		end %>
<% end %>
