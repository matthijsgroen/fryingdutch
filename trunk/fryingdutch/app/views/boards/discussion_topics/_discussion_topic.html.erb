<% content_tag_for(:tr, comment) do %>
	<td class="state"><%="*" if comment.unread_reactions_for current_user %></td>
	<td class="icon">:-)</td>
	<td class="title"><%=link_to h(discussion_topic.title), board_discussion_topic_path(@board, discussion_topic) %></td>
	<td class="replies"><%= comment.content.replies.count %></td>
	<td class="author"><%=h comment.user ? comment.user.nickname : "Gast" %></td>
	<td class="last_post">
		<%= time_ago_in_words comment.updated_at %> geleden
	</td>
<% end %>