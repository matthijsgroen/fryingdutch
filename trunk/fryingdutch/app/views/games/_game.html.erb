	<div class="game" id="<%=dom_id game %>">
		<h2><%= link_to h(game.name), game %></h2>
		<div class="column">
			<p class="description"><%=h game.description %></p>
			
			<div class="averagerating box">
				<%= render :partial => "game_rating", :locals => { :game => game } %>
			</div>
			
			<div class="play_options">
				<%= render :partial => "play_options", :locals => { :game => game } if current_user %>
			</div>
		</div>
		
		<div class="column">
			<ul class="imagebar">
				<% 3.times do |index| %>
				<li class="image"><%= game.screenshots[index] ? 
						link_to(
							image_tag(game.screenshots[index].content.public_filename(:thumb)),
							game_screenshot_path(game, game.screenshots[index]),
							:rel => "remote"	
						) : 
							image_tag("/images/no_image.jpg") %></li>
				<% end %>
				<li>
					<ul class="links">
						<li><%= link_to "Screenshots (#{game.screenshots.count})", game_screenshots_path(game), :rel => "remote" %></li>					
						<li><%= link_to "Usershots (#{game.usershots.count})", game_usershots_path(game), :rel => "remote" %></li>				
						<li><%= link_to "+ Toevoegen", new_game_screenshot_path(game), :rel => "facebox" if current_user %></li>
					</ul>		
				</li>
			</ul>			
			<p class="tags">Tags: <%= game.tags.collect { |tag| link_to h(tag.name), games_by_tagname_path(tag.name) }.join ", " %></p>
		</div>
		
		<ul class="game_menu">
			<li><%= link_to "Meer info", info_game_path(game), :class => "game_tab info" %></li>
			<li><%= link_to "Speler commentaar (#{game.comments.count})", game_comments_path(game), :class => "game_tab comments" %></li>
			<li><%= link_to "Speler groepen", "#" %></li>
			<% if current_user %>
			<li><%= link_to_remote "Bewerken", :url => edit_game_path(game) %></li>
			<li><%= link_to_remote "Verwijderen", :url => game, :method => :delete, :confirm => "Weet u zeker dat u het spel #{game.name} wilt verwijderen?" %></li>
			<% end %>
		</ul>
		<div class="tab_contents"></div>
	</div>
