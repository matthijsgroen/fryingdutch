<% remote_form_for(@game) do |f| %>
  <%= f.error_messages %>
  <%= f.text_field :name, :class => "textfield name" %>
	<br />
  <%= f.label :description, "Omschrijving" %><br />
  <%= f.text_area :description, :cols => 40, :rows => 5 %><br />
  <%= f.label :tag_list, "Tags:" %> <%= f.text_field :tag_list, :class => "textfield" %><br />
  <%= f.submit "Toevoegen" %>
<% end %>
