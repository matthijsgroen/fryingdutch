<% if current_user %>
<div id="user_header">
<div class="stats">
	<p>Level: 1</p>
	<p>Credits: 200</p>
</div>
<img class="avatar" src="/images/default_avatar.png" />	
<div id="user_menu">
	<strong><%=h current_user.nickname %></strong><br />
	<%= link_to "Instellingen", settings_path %> - <%= link_to "Uitloggen", logoff_path %><br />
	Berichten (0) - Help<br />		
</div>
</div>
<% else %>
<div id="user_header">
<div id="user_menu">
	<% form_tag(sessions_url) do %>
  <label for="openid_identifier">OpenID:</label>
	<%= text_field_tag "openid_identifier" %>
	<%= submit_tag 'Log in' %>
  <% end %>
	<!-- BEGIN ID SELECTOR -->
	<script type="text/javascript" id="__openidselector" src="https://www.idselector.com/selector/796d7353866138a8eda25ec1efc2e80b67d2440c" charset="utf-8"></script>
	<!-- END ID SELECTOR -->
	<%= link_to "Registreren?", new_user_path %> - Help
</div>
</div>

<% end %>